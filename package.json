{
  "name": "particles-panel",
  "displayName": "Particles Panel",
  "description": "Particles in your IDE bottom panel or sidebars",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "particles-panel.reloadWebView",
        "title": "Reload Particles Panel"
      }
    ],
    "viewsContainers": {
        "panel": [
            {
                "id": "particlePanel",
                "title": "Particles Panel",
                "icon": "assets/logo.png"
            }
        ],
        "activitybar": [
          {
            "id": "particlePanel",
            "title": "Particles Panel",
            "icon": "assets/logo.png"
          }
        ]
    },
    "views": {
        "particlePanel": [
            {
                "type": "webview",
                "id": "particlePanelView",
                "name": ""
            }
        ]
    }
  },
  "scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"build": "vsce package",
		"release": "standard-version"
	},
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
